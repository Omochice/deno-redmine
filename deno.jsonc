{
  "tasks": {
    "fmt": "deno fmt ./**/*.ts",
    "fmt:check": "deno fmt --check ./**/*.ts",
    "check": "deno check ./**/*.ts",
    "lint": "deno lint ./**/*.ts",
    "test": "deno test",
    "test:coverage": "mkdir coverage -p && deno test --coverage=coverage/coverage && deno coverage coverage/coverage --lcov --output=coverage/lcov.info"
  },
  "lock": false,
  "fmt": {
    "exclude": ["CHANGELOG.md"]
  }
}
